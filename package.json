{
  "name": "monfily",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "frontend",
    "shared"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev --workspace=@monfily/frontend\" \"npm run vercel -- --port 3001\"",
    "dev:all": "concurrently \"npm run dev --workspace=@monfily/frontend\" \"npm run vercel -- --port 3001\"",
    "vercel": "vercel dev",
    "dev:frontend": "npm run dev --workspace=@monfily/frontend",
    "build": "npm run build --workspace=@monfily/frontend",
    "check": "npm run check --workspaces --if-present",
    "clean": "rimraf node_modules dist frontend/node_modules shared/node_modules",
    "install:all": "npm install"
  },
  "dependencies": {
    "nodemailer": "^6.9.16",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@vercel/node": "^5.1.8",
    "concurrently": "^9.1.0",
    "rimraf": "^6.0.1",
    "typescript": "5.6.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}